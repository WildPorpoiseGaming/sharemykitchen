{
  "env": {
    "browser": true,
    "jest": true
  },
  "extends": "airbnb",
  "plugins": [
    "compat"
  ],
  "rules": {
    "semi": [2, "never"],
    "no-unexpected-multiline": 2,
    "arrow-body-style": ["error", "always"],
    "no-underscore-dangle": ["error", { "allow": ["_id"] }]
  },
  "settings": {
    "polyfills": ["fetch"]
  }
}
